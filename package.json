{
  "name": "server-boilerplate",
  "version": "3.1.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "prestart": "npm run -s build",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.js --exec \"node -r dotenv/config -r babel-register\"",
    "clean": "rimraf dist",
    "build": "npm run clean && mkdir dist && babel src -s -D -d dist",
    "test": "mocha test --recursive --colors --timeout 10000 --reporter mochawesome --exit",
    "doc": "apidoc -i src/controller -o documentation/",
    "lint": "esw -w src test"
  },
  "dependencies": {
    "apicache": "^1.2.0",
    "async": "^2.6.0",
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.4.0",
    "body-parser": "^1.17.1",
    "cheerio": "^1.0.0-rc.2",
    "compression": "^1.7.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "debug": "^3.1.0",
    "dot": "^1.1.2",
    "express": "^4.14.1",
    "express-session": "^1.15.6",
    "express-winston": "^2.4.0",
    "file-system": "^2.2.2",
    "getenv": "^0.7.0",
    "http": "0.0.0",
    "isdev": "^1.0.1",
    "lodash": "^4.17.4",
    "moment": "^2.19.3",
    "moment-timezone": "^0.5.14",
    "morgan": "~1.7.0",
    "nodemailer": "^4.4.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-mailchimp": "^1.1.0",
    "passport-parse": "0.0.5",
    "passport-remember-me": "0.0.1",
    "rasterizehtml": "^1.3.0",
    "superagent": "^3.8.2",
    "util.promisify": "^1.0.0",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "axios": "^0.18.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^21.2.0",
    "babel-register": "^6.24.1",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "dotenv": "^4.0.0",
    "eslint": "^4.19.1",
    "eslint-config-universe": "^1.0.7",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-watch": "^3.1.3",
    "jest": "^21.2.1",
    "mocha": "^4.0.1",
    "mochawesome": "^3.0.0",
    "nodemon": "^1.12.1",
    "prettier": "^1.12.0"
  },
  "eslintConfig": {
    "extends": [
      "universe/node",
      "universe"
    ],
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "jest": true
    }
  }
}
